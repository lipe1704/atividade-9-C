//. Faça um programa que leia os elementos inteiros para uma matriz quadrada de ordem 4 e imprima na
//tela a soma dos elementos abaixo da diagonal principal e a própria matriz.
#include <stdio.h>
int main () {
    int mat[4][4], somam=0, somad=0;
    for (int i=0; i<4; i++){
        for (int j=0; j<4; j++){
            printf ("( %i,%i ) informe um número : ", i, j);
            scanf ("%i", &mat[i][j]);
        }
    }
    for (int i=0; i<4; i++){
        for (int j=0; j<4; j++){
        printf ("%i ", mat[i][j]);
        somam+=mat[i][j];
        if (i>j){
                somad+=mat[i][j];
            }
        }
    printf ("\n");    
    }
    
    printf ("a soma abaixo da diagonal é : %i\n", somad);
    printf ("a soma da matriz é : %i", somam);
}
